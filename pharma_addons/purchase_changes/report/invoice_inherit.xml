<?xml version="1.0" encoding="UTF-8" ?>
<!-- your_module/data/report_invoice_customization.xml -->
<odoo>

    <template id="report_invoice_inherit_with_line" inherit_id="account.report_invoice_document">
        <xpath expr="//div[@class='text-muted mb-3']" position="after">
            <div class="custom-line text-end" style="height: 200px; margin-top:250px;">
                <p style="padding-top: 150px;">Prepared by:
                    <span t-field="o.create_uid">Prepared by:</span>
                </p>

            </div>
        </xpath>

    </template>

</odoo>