<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="crm_lead_add_product" model="ir.ui.view">
        <field name="name">crm.lead.add.field</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form" />
        <field name="arch" type="xml">

           <xpath expr="//div[@class='o_row o_row_readonly'][field[@name='phone']]" position="after">

                <field name="products"/>

            </xpath>
        </field>
    </record>

</odoo>
